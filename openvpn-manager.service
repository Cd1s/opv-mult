[Unit]
Description=OpenVPN Multi-Instance Manager
After=network.target network-online.target
Wants=network-online.target

[Service]
Type=simple
ExecStart=/usr/local/bin/openvpn-manager start
ExecStop=/usr/local/bin/openvpn-manager stop
Restart=on-failure
RestartSec=10
StandardOutput=journal
StandardError=journal

# Security settings
NoNewPrivileges=false
PrivateTmp=false

[Install]
WantedBy=multi-user.target
